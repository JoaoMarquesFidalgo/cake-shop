{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["./src/controllers/*"],
            "@models/*": ["./src/models/*"],
            "@views/*": ["./src/views/*"],
            "@config/*": ["./src/config/*"],
            "@services/*": ["./src/services/*"],
            "@utils/*": ["./src/utils/*"],
            "@routes/*": ["./src/routes/*"],
            "@auth/*": ["./src/auth/*"],
            "@enum/*": ["./src/enum/*"]
        }
    },
    "include": [
        "src/**/*", "__tests__"
    ]
}