{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["./src/controllers/*"],
            "@models/*": ["./src/models/*"],
            "@views/*": ["./src/views/*"],
            "@config/*": ["./src/config/*"],
            "@services/*": ["./src/services/*"],
            "@utils/*": ["./src/utils/*"]
        },
        "sourceMap": true,
        "outDir": "./dist",
    },
    "include": [
        "src/**/*"
    ]
}